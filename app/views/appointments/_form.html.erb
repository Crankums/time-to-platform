<%= form_with model: appointment, local: true do |f| %>
<%= f.label :name %> <br>
<%= f.text_field :name %> <br>
<%= f.label :location %> <br>
<%= f.text_field :location %> <br>
<%= f.label :days %> <br>
<%= f.collection_check_boxes(:days, days, :to_s, :to_s) %> <br>
 
<%= f.label :starts_at%> <%# time %> <br>
<%= f.time_select :starts_at, {minute_step: 30, ampm: true} %><br>
<%= f.label :ends_at %> <br>
<%= f.time_select :ends_at, {minute_step: 30, ampm: true} %> <br>
<%= f.label :type %> <br>
<%= f.text_field :type %> <br>
<!--- turn this into a selection? -->
<!--    add conditionals? 'if work, need clothes?' etc-->
<%= f.submit %>
<% end %>
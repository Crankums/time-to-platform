<%= form_with model: appointment, local: true do |f| %>
<%= f.label :name %> <br>
<%= f.text_field :name %> <br>
<%= f.label :location %> <br>
<%= f.text_field :location %> <br>
<%= f.label :days %> <br>
<%= f.collection_check_boxes(:days, days, :to_s, :to_s) %> <br>
 
<%= f.label :start_time%> <%# time %> <br>
<%= f.datetime_local_field :start_time, {minute_step: 30, ampm: true} %><br>
<%= f.label :end_time %> <br>
<%= f.datetime_local_field :end_time, {minute_step: 30, ampm: true} %> <br>
<%= f.label :appt_type %> <br>
<%= f.text_field :appt_type %> <br>
<!--- turn this into a selection? -->
<!--    add conditionals? 'if work, need clothes?' etc-->
<%= f.submit %>
<% end %>